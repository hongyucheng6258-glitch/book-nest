<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.book.mapper.OrderItemMapper">

    <!-- 结果集映射：数据库列→实体类字段 -->
    <resultMap id="OrderItemResultMap" type="com.example.book.entity.OrderItem">
        <id column="id" property="id"/>
        <result column="order_id" property="orderId"/>
        <result column="book_id" property="bookId"/>
        <result column="quantity" property="quantity"/>
        <result column="price" property="price"/>
        <!-- 关联书籍信息 -->
        <association property="book" column="book_id" select="com.example.book.mapper.BookMapper.selectById"/>
    </resultMap>

    <!-- 根据订单ID查询订单详情列表 -->
    <select id="selectByOrderId" resultMap="OrderItemResultMap">
        SELECT id, order_id, book_id, quantity, price
        FROM order_item
        WHERE order_id = #{orderId}
        ORDER BY id ASC
    </select>

    <!-- 批量插入订单详情 -->
    <insert id="batchInsert">
        INSERT INTO order_item (order_id, book_id, quantity, price)
        VALUES
        <foreach collection="orderItems" item="item" separator=",">
            (#{item.orderId}, #{item.bookId}, #{item.quantity}, #{item.price})
        </foreach>
    </insert>
    
    <!-- 插入单个订单详情 -->
    <insert id="insert">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            SELECT last_insert_rowid()
        </selectKey>
        INSERT INTO order_item (order_id, book_id, quantity, price)
        VALUES (#{orderId}, #{bookId}, #{quantity}, #{price})
    </insert>

    <!-- 根据订单ID删除订单详情 -->
    <delete id="deleteByOrderId">
        DELETE FROM order_item
        WHERE order_id = #{orderId}
    </delete>

</mapper>